<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>ajax</display-name>
  <welcome-file-list>
    <welcome-file>/WEB-INF/views/index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>AjaxServlet</servlet-name>
  	<servlet-class>com.ajax.test.servlet.AjaxServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AjaxServlet</servlet-name>
  	<url-pattern>/ajax/*</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>FoodServlet</servlet-name>
  	<servlet-class>com.ajax.test.servlet.FoodServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>FoodServlet</servlet-name>
  	<url-pattern>/food/*</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>ViewServlet</servlet-name>
  	<servlet-class>com.ajax.test.servlet.ViewServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ViewServlet</servlet-name>
  	<url-pattern>/views/*</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>MovieServlet</servlet-name>
  	<servlet-class>com.ajax.test.servlet.MovieServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>MovieServlet</servlet-name>
  	<url-pattern>/movie/*</url-pattern>
  </servlet-mapping>
  
</web-app>